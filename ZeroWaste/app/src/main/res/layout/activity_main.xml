<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


 <LinearLayout
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <RelativeLayout
      android:layout_marginTop="30dp"
      android:layout_marginLeft="120dp"
      android:layout_marginRight="20dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="DashBoard"
       android:textColor="@color/teal_700"
       android:textSize="35dp"
       android:textStyle="bold">

   </TextView>

  </RelativeLayout>

  <GridLayout
      android:layout_marginTop="25dp"
      android:columnCount="2"
      android:rowCount="4"
      android:alignmentMode="alignMargins"
      android:columnOrderPreserved="false"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


   <androidx.cardview.widget.CardView

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_columnWeight="1"
       android:layout_rowWeight="1"
       app:cardElevation="6dp"
       app:cardCornerRadius="12dp"
       android:layout_margin="12dp"
       app:cardBackgroundColor="@color/heading"
       >

    <LinearLayout
        android:id="@+id/Travel"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <ImageView
         android:src="@drawable/events"
         android:layout_width="80dp"
         android:layout_height="80dp"/>


     <TextView
         android:layout_marginTop="12dp"
         android:textColor="#000000"
         android:textSize="18sp"
         android:text="On going Events"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>



    </LinearLayout>


   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView


       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_columnWeight="1"
       android:layout_rowWeight="1"
       app:cardElevation="6dp"
       app:cardCornerRadius="12dp"
       android:layout_margin="12dp"
       app:cardBackgroundColor="@color/ngoList"
       >

    <LinearLayout
        android:id="@+id/Report"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <ImageView
         android:src="@drawable/checkin"
         android:layout_width="80dp"
         android:layout_height="80dp"/>

     <TextView
         android:layout_marginTop="12dp"
         android:textColor="#000000"
         android:textSize="18sp"
         android:text="Event Check In"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>



    </LinearLayout>


   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_marginTop="27dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_columnWeight="1"
       android:layout_rowWeight="1"
       android:id="@+id/NGOListButton"
       app:cardElevation="6dp"
       app:cardCornerRadius="12dp"
       android:layout_margin="12dp"
       app:cardBackgroundColor="@color/help"
       >

    <LinearLayout

        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <ImageView
         android:src="@drawable/ngolist"
         android:layout_width="80dp"
         android:layout_height="80dp"/>

     <TextView
         android:layout_marginTop="12dp"
         android:textColor="#000000"
         android:textSize="18sp"
         android:text="List of NGO's "
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>



    </LinearLayout>


   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView

       android:layout_marginTop="27dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/DonateFoodButton"
       android:layout_columnWeight="1"
       android:layout_rowWeight="1"
       app:cardElevation="6dp"
       app:cardCornerRadius="12dp"
       android:layout_margin="12dp"
       app:cardBackgroundColor="#E2F0CB"
       >

    <LinearLayout

        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <ImageView
         android:src="@drawable/donate"
         android:layout_width="80dp"
         android:layout_height="80dp"/>

     <TextView
         android:layout_marginTop="16dp"
         android:textColor="#000000"
         android:textSize="18sp"
         android:text="Donate Food "
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>



    </LinearLayout>


   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView

       android:layout_marginTop="27dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_columnWeight="1"
       android:layout_rowWeight="1"
       app:cardElevation="6dp"
       app:cardCornerRadius="12dp"
       android:layout_margin="12dp"
       app:cardBackgroundColor="#B5EAD7"
       >

    <LinearLayout
        android:id="@+id/Gallery"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <ImageView
         android:src="@drawable/help"
         android:layout_width="80dp"
         android:layout_height="80dp"/>

     <TextView
         android:layout_marginTop="12dp"
         android:textColor="#000000"
         android:textSize="18sp"
         android:text="Need Help ? "


         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>



    </LinearLayout>


   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView

       android:layout_marginTop="27dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_columnWeight="1"
       android:layout_rowWeight="1"
       app:cardElevation="6dp"
       app:cardCornerRadius="12dp"
       android:layout_margin="12dp"
       app:cardBackgroundColor="#D4F0F7"
       >

    <LinearLayout
        android:id="@+id/Alarm"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <ImageView
         android:src="@drawable/pay"
         android:layout_width="80dp"
         android:layout_height="80dp"/>

     <TextView
         android:layout_marginTop="12dp"
         android:textColor="#000000"
         android:textSize="18sp"
         android:text="Deal in"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>



    </LinearLayout>


   </androidx.cardview.widget.CardView>







  </GridLayout>



 </LinearLayout>





</ScrollView>